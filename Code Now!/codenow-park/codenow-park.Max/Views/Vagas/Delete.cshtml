@model codenow_park.Dominio.Models.Vaga

@{
    ViewData["Title"] = "Retirar Veículo";
}

<h1>@Model.Veiculo?.Placa : @Model.Veiculo?.Modelo</h1>

<h3>Confirma o pagamento para retirada do veículo?</h3>
<div>
    <h4>Vaga</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estacionamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estacionamento.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Veiculo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Veiculo.Modelo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Entrada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Entrada)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Saida)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Saida)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HorasEstacionado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HorasEstacionado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorPagar)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorPagar)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorPago)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorPago)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ocupado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ocupado)
        </dd>
