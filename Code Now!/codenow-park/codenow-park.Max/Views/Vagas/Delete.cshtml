        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Retirar" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="Vagas" asp-route-id="@Model.EstacionamentoId">Retornar</a>
    </form>
</div>
